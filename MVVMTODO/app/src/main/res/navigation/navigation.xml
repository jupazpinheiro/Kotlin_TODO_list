<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/taskFragment">

    <fragment
        android:id="@+id/taskFragment"
        android:name="com.julia.mvvmtodo.ui.task.TaskFragment"
        android:label="AT Fundamentos"
        tools:layout="@layout/fragment_task" >
        <action
            android:id="@+id/action_taskFragment_to_addFragment"
            app:destination="@id/addFragment"
            app:enterAnim="@anim/direita"
            app:exitAnim="@anim/esquerda"
            app:popEnterAnim="@anim/esquerda2"
            app:popExitAnim="@anim/direita2" />
        <action
            android:id="@+id/action_taskFragment_to_updateFragment"
            app:destination="@id/updateFragment"
            app:enterAnim="@anim/esquerda2"
            app:exitAnim="@anim/direita2"
            app:popEnterAnim="@anim/direita"
            app:popExitAnim="@anim/esquerda" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.julia.mvvmtodo.ui.add.AddFragment"
        android:label="Adicionar"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_taskFragment"
            app:destination="@id/taskFragment"
            app:enterAnim="@anim/esquerda2"
            app:exitAnim="@anim/direita2"
            app:popUpTo="@id/taskFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.julia.mvvmtodo.ui.update.UpdateFragment"
        android:label="Atualizar"
        tools:layout="@layout/fragment_update" >
        <action
            android:id="@+id/action_updateFragment_to_taskFragment"
            app:destination="@id/taskFragment"
            app:enterAnim="@anim/direita"
            app:exitAnim="@anim/esquerda"
            app:popUpTo="@id/taskFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="taskEntry"
            app:argType="com.julia.mvvmtodo.banco.TaskEntry" />
    </fragment>
</navigation>